{
	"name": "JustBard Orange Theme",
	"type": "dark",
	"colors": {
	  "editor.background": "#1d1d1c",
	  "editor.foreground": "#e6e6e6",
	  "sideBar.background": "#1b1b1b",
	  "activityBar.background": "#1b1b1b",
	  "sideBar.foreground": "#f5f5f5",
	  "sideBarTitle.foreground": "#ffae00",
	  "activityBarBadge.background": "#ff6200",
	  "statusBar.background": "#2a2a2a",
	  "statusBar.foreground": "#ff9d2d",
	  "statusBar.border": "#ff6200",
	  "statusBarItem.remoteBackground": "#ff8800",
	  "statusBarItem.remoteForeground": "#ffffff",
	  "list.activeSelectionBackground": "#333333",
	  "list.activeSelectionForeground": "#ffffff",
	  "editor.hoverHighlightBackground": "#ff770030",      // Highlight on symbol under cursor
	  "editorHoverWidget.background": "#2a2a2a",           // Background of the hover tooltip
	  "editorHoverWidget.border": "#ff6200",                // Border around the tooltip
	  "textLink.foreground": "#ffae00",
	  "textLink.activeForeground": "#ff6200",
	  "editorSuggestWidget.highlightForeground": "#ffae00" // completion highlight

	},
	"tokenColors": [
	  {
		"name": "Comment",
		"scope": ["comment", "punctuation.definition.comment"],
		"settings": {
		  "foreground": "#888888",
		  "fontStyle": "italic"
		}
	  },
	  {
		"name": "Keyword",
		"scope": ["keyword", "storage", "storage.type", "storage.modifier"],
		"settings": {
		  "foreground": "#ffae00"
		}
	  },
	  {
		"name": "Function",
		"scope": ["entity.name.function", "support.function", "variable.function"],
		"settings": {
		  "foreground": "#ff6200"
		}
	  },
	  {
		"name": "Variable",
		"scope": ["variable", "variable.parameter", "meta.definition.variable"],
		"settings": {
		  "foreground": "#e7e7e7"
		}
	  },
	  {
		"name": "Constant",
		"scope": [
		  "constant",
		  "constant.numeric",
		  "constant.language",
		  "constant.character",
		  "number"
		],
		"settings": {
		  "foreground": "#f45c11"
		}
	  },
	  {
		"name": "String",
		"scope": ["string", "markup.quote", "constant.other.symbol"],
		"settings": {
		  "foreground": "#ff9100"
		}
	  },
	  {
		"name": "Class / Type",
		"scope": [
		  "entity.name.type",
		  "support.class",
		  "entity.name.class",
		  "support.type"
		],
		"settings": {
		  "foreground": "#FFCB6B"
		}
	  },
	  {
		"name": "Attributes / Properties",
		"scope": [
		  "entity.other.attribute-name",
		  "support.type.property-name",
		  "variable.other.property"
		],
		"settings": {
		  "foreground": "#ffa200"
		}
	  },
  
	  // --- JSON ---
	  {
		"name": "JSON - Key Level 0",
		"scope": ["source.json support.type.property-name.json"],
		"settings": {
		  "foreground": "#e6e6e6"
		}
	  },
	  {
		"name": "JSON - Key Nested",
		"scope": [
		  "meta.structure.dictionary.json meta.structure.dictionary.value.json support.type.property-name.json"
		],
		"settings": {
		  "foreground": "#FFCB6B"
		}
	  },
  
	  // --- Markdown ---
	  {
		"name": "Markdown Headings",
		"scope": ["markup.heading.markdown", "markup.heading"],
		"settings": {
		  "foreground": "#ffae00",
		  "fontStyle": "bold"
		}
	  },
	  {
		"name": "Markdown Bold",
		"scope": ["markup.bold", "markup.bold.markdown"],
		"settings": {
		  "foreground": "#fc9351",
		  "fontStyle": "bold"
		}
	  },
	  {
		"name": "Markdown Italic",
		"scope": ["markup.italic", "markup.italic.markdown"],
		"settings": {
		  "foreground": "#ffae00",
		  "fontStyle": "italic"
		}
	  },
	  {
		"name": "Markdown Inline Code",
		"scope": ["markup.inline.raw.markdown"],
		"settings": {
		  "foreground": "#f45c11"
		}
	  },
	  {
		"name": "Markdown Link Text",
		"scope": ["string.other.link.title.markdown"],
		"settings": {
		  "foreground": "#ffa200",
		  "fontStyle": "underline"
		}
	  },
	  {
		"name": "Markdown Link URL",
		"scope": ["markup.underline.link.markdown"],
		"settings": {
		  "foreground": "#FFCB6B"
		}
	  },
	  {
		"name": "Markdown Blockquote",
		"scope": ["markup.quote.markdown"],
		"settings": {
		  "foreground": "#aaaaaa",
		  "fontStyle": "italic"
		}
	  }
	]
  }
  